---
# Tuya Converted wallplug, not in use yet.
esphome:
  name: esp14
  platform: ESP8266
  board: esp8285

# WiFi connection
wifi:
  ssid: !secret wifi_iot_ssid
  password: !secret wifi_iot_password
  ap:
    ssid: esp14

captive_portal:

# Enable logging
logger:

# Enable Home Assistant API
api:
  password: !secret esphome_esp14_api_password

# Enable over-the-air updates
ota:
  password: !secret esphome_esp14_ota_password

# Enable Web server
web_server:
  port: 80

# Sync time with Home Assistant
time:
  - platform: homeassistant
    id: homeassistant_time

# Text sensors with general information
text_sensor:
  - platform: version
    name: esphome_esp14_version
  - platform: wifi_info
    ip_address:
      name: esphome_esp14_ip
    ssid:
      name: esphome_esp14_ssid
    bssid:
      name: esphome_esp14_bssid

sensor:
  # Uptime sensor
  - platform: uptime
    name: esphome_esp14_uptime
  # WiFi Signal sensor
  - platform: wifi_signal
    name: esphome_esp14_wifi_signal
    update_interval: 10s
  # Power sensor
  - platform: hlw8012
    sel_pin:
      number: GPIO12
      inverted: true
    cf_pin: GPIO04
    cf1_pin: GPIO05
    change_mode_every: 3
    update_interval: 3s
    # Current sensor
    current:
      name: esphome_esp14_current
      unit_of_measurement: A
      accuracy_decimals: 3
      filters:
        # Map 0.0 (from sensor) to 0.0 (true value)
        - calibrate_linear:
            - 0.0 -> 0.013
            - 0.07242 -> 0.074
            - 1.24084 -> 1.063
            - 1.32775 -> 1.133
            - 4.91990 -> 4.189
            - 10.73784 -> 9.821
        # Make everything below 0.01A appear as just 0A.
        # Furthermore it corrects 0.013A for the power usage of the plug.
        - lambda: if (x < (0.01 - 0.013)) return 0; else return (x - 0.013);
    # Voltage sensor
    voltage:
      name: esphome_esp14_voltage
      unit_of_measurement: V
      accuracy_decimals: 1
      filters:
        # Map 0.0 (from sensor) to 0.0 (true value)
        - calibrate_linear:
            - 0.0 -> 0.0
            - 552.88519 -> 226.7
            - 564.05457 -> 232.2
            - 566.64264 -> 232.3
    # Power sensor
    power:
      id: power
      name: esphome_esp14_power
      unit_of_measurement: W
      accuracy_decimals: 0
      filters:
        # Map 0.0 (from sensor) to 0.0 (true value)
        - calibrate_linear:
            - 0.0 -> 1.25
            - 55.16593 -> 11.05
            - 1365.35681 -> 246.8
            - 1451.55359 -> 261.9
            - 3175.48877 -> 561.3
            - 11329.70410 -> 2193.0
        # Make everything below 2W appear as just 0W.
        # Furthermore it corrects 1.25W for the power usage of the plug.
        - lambda: if (x < (2 + 1.25)) return 0; else return (x - 1.25);
  # Total daily energy sensor
  - platform: total_daily_energy
    name: esphome_esp14_daily_energy
    power_id: power
    filters:
      # Multiplication factor from W to kW is 0.001
      - multiply: 0.001
    unit_of_measurement: kWh

binary_sensor:
  # Binary sensor for the button press
  - platform: gpio
    name: esphome_esp14_button
    pin:
      number: GPIO3
      inverted: true
    on_press:
      - switch.toggle: relay

switch:
  # Switch to restart the plug
  - platform: restart
    name: esphome_esp14_restart
  # Switch to toggle the relay
  - platform: gpio
    id: relay
    name: esphome_esp14_switch
    pin: GPIO14
    on_turn_on:
      - light.turn_on: led
    on_turn_off:
      - light.turn_off: led

output:
  # Relay state led
  - platform: esp8266_pwm
    id: state_led
    pin:
      number: GPIO1
      inverted: true

light:
  # Relay state light
  - platform: monochromatic
    output: state_led
    id: led

# Uses the red LED as status indicator
status_led:
  pin:
    number: GPIO13
    inverted: true
