---
# Tuya Converted wallplug: Gosund SP1
# https://frenck.link/gosund-sp1
#
# This plug is connected to our kitchen fridge
# and is mainly used for power monitoring.
#
esphome:
  name: esp07
  platform: ESP8266
  board: esp8285

# WiFi connection
wifi:
  ssid: !secret wifi_iot_ssid
  password: !secret wifi_iot_password
  ap:
    ssid: esp07

captive_portal:

# Enable logging
logger:

# Enable Home Assistant API
api:
  password: !secret esphome_esp07_api_password

# Enable over-the-air updates
ota:
  password: !secret esphome_esp07_ota_password

# Enable Web server
web_server:
  port: 80

# Sync time with Home Assistant
time:
  - platform: homeassistant
    id: homeassistant_time

# Text sensors with general information
text_sensor:
  - platform: version
    name: esphome_esp07_version
  - platform: wifi_info
    ip_address:
      name: esphome_esp07_ip
    ssid:
      name: esphome_esp07_ssid
    bssid:
      name: esphome_esp07_bssid

sensor:
  # Uptime sensor
  - platform: uptime
    name: esphome_esp07_uptime
  # WiFi Signal sensor
  - platform: wifi_signal
    name: esphome_esp07_wifi_signal
    update_interval: 10s
  # Power sensor
  - platform: hlw8012
    sel_pin:
      number: GPIO12
      inverted: true
    cf_pin: GPIO04
    cf1_pin: GPIO05
    change_mode_every: 3
    update_interval: 3s
    # Current sensor
    current:
      name: esphome_esp07_current
      unit_of_measurement: A
      accuracy_decimals: 3
      filters:
        # Map 0.0 (from sensor) to 0.0 (true value)
        - calibrate_linear:
            - 0.0 -> 0.012
            - 0.08208 -> 0.072
            - 1.42914 -> 1.134
            - 5.46548 -> 4.358
            - 12.48563 -> 9.874
            - 12.64979 -> 9.965
        # Make everything below 0.01A appear as just 0A.
        # Furthermore it corrects 0.012A for the power usage of the plug.
        - lambda: if (x < (0.01 - 0.012)) return 0; else return (x - 0.012);
    # Voltage sensor
    voltage:
      name: esphome_esp07_voltage
      unit_of_measurement: V
      accuracy_decimals: 1
      filters:
        # Map 0.0 (from sensor) to 0.0 (true value)
        - calibrate_linear:
            - 0.0 -> 0.0
            - 591.43323 -> 225.3
            - 612.81848 -> 232.7
            - 615.13416 -> 232.9
            - 618.13080 -> 233.0
    # Power sensor
    power:
      id: power
      name: esphome_esp07_power
      unit_of_measurement: W
      accuracy_decimals: 0
      filters:
        # Map 0.0 (from sensor) to 0.0 (true value)
        - calibrate_linear:
            - 0.0 -> 1.15
            - 58.61380 -> 11.0
            - 1589.46838 -> 261.5
            - 3675.43018 -> 607.5
            - 13684.59863 -> 2240.0
        # Make everything below 2W appear as just 0W.
        # Furthermore it corrects 1.15W for the power usage of the plug.
        - lambda: if (x < (2 + 1.15)) return 0; else return (x - 1.15);
  # Total daily energy sensor
  - platform: total_daily_energy
    name: esphome_esp07_daily_energy
    power_id: power
    filters:
      # Multiplication factor from W to kW is 0.001
      - multiply: 0.001
    unit_of_measurement: kWh

binary_sensor:
  # Binary sensor for the button press
  - platform: gpio
    name: esphome_esp07_button
    pin:
      number: GPIO3
      inverted: true
    on_press:
      - switch.toggle: relay

switch:
  # Switch to restart the plug
  - platform: restart
    name: esphome_esp07_restart
  # Switch to toggle the relay
  - platform: gpio
    id: relay
    name: esphome_esp07_switch
    restore_mode: ALWAYS_ON
    pin: GPIO14
    on_turn_on:
      - light.turn_on: led
    on_turn_off:
      - light.turn_off: led

output:
  # Relay state led
  - platform: esp8266_pwm
    id: state_led
    pin:
      number: GPIO1
      inverted: true

light:
  # Relay state light
  - platform: monochromatic
    output: state_led
    id: led

# Uses the red LED as status indicator
status_led:
  pin:
    number: GPIO13
    inverted: true
