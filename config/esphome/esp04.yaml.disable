---
# esp04: General use power bar.
#
# This ESPHome code is used on a Sonoff Basic.
# It controls nothing special, it is just a
# generic Sonoff connected to a power bar.
#
# I have it around for quickly hooking up something.
# For example, the christmas tree or some other
# temporary thing.
#
esphome:
  name: esp04
  platform: ESP8266
  board: esp01_1m
  board_flash_mode: dout

wifi:
  ssid: !secret wifi_iot_ssid
  password: !secret wifi_iot_password
  ap:
    ssid: esp04

captive_portal:

logger:

api:
  password: !secret esphome_esp04_api_password

ota:
  password: !secret esphome_esp04_ota_password

web_server:
  port: 80

sensor:
  - platform: wifi_signal
    name: esphome_esp04_wifi_signal
    update_interval: 10s
  - platform: uptime
    name: esphome_esp04_uptime

text_sensor:
  - platform: version
    name: esphome_esp04_esphome_version

switch:
  - platform: restart
    name: esphome_esp04_restart
  - platform: gpio
    name: other_power_bar
    id: relay
    pin: GPIO12
    on_turn_on:
      - light.turn_on: led
    on_turn_off:
      - light.turn_off: led

binary_sensor:
  - platform: gpio
    id: button
    pin:
      number: GPIO0
      mode: INPUT_PULLUP
      inverted: true
    on_press:
      - switch.toggle: relay

output:
  - platform: esp8266_pwm
    id: green_led
    pin:
      number: GPIO13
      inverted: true

light:
  - platform: monochromatic
    output: green_led
    id: led
