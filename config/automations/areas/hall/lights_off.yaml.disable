---
description: Turn hall lights off when there isn't motion detected
alias: hall_lights_off
id: e0c89521-b483-4ca2-ae81-4ec7a98d005d
trigger:
  - platform: homeassistant
    event: start
  - platform: state
    entity_id:
      - alarm_control_panel.home_alarm
      - light.hall_ceiling
  - platform: state
    entity_id:
      - binary_sensor.hall_motion
    to: 'off'
    for:
      seconds: 10
condition:
  - condition: state
    entity_id: light.hall_ceiling
    state: 'on'
  - condition: or
    conditions:
      - condition: state
        entity_id: alarm_control_panel.home_alarm
        state: armed_away
      - condition: state
        entity_id: alarm_control_panel.home_alarm
        state: armed_home
      - condition: state
        entity_id: binary_sensor.hall_motion
        state: 'off'
        for:
          seconds: 10
      - condition: and
        conditions:
          - condition: numeric_state
            entity_id: sun.sun
            value_template: >-
              {{ state_attr('sun.sun', 'elevation') }}
            below: 3.0
          - condition: numeric_state
            entity_id: sensor.hall_luminance
            above: 50
action:
  - service: switch.turn_off
    data:
      entity_id:
        - switch.circadian_lighting_hall
  - service: light.turn_off
    data:
      entity_id:
        - light.hall_ceiling
      transition: 5
